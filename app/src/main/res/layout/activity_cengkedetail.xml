<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/skin_item_text_bg"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="上海"
            android:textColor="@color/skin_item_text_color"
            android:textSize="15sp"
            skin:enable="true"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvHomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="课程详情"
            android:textColor="@color/skin_item_text_color"
            skin:enable="true"
            android:textSize="20sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/app_interval_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        skin:enable="true"
        android:background="@color/skin_item_text_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="计算机网路课程:"
            android:layout_weight="1"
            android:id="@+id/tvCourseName"
            android:layout_marginTop="10dp"
            android:gravity="right"
            skin:enable="true"
            android:textColor="@color/skin_item_text_color"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvNum"
            android:text="共有3节"
            skin:enable="true"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:textColor="@color/skin_item_text_color"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        skin:enable="true"
        android:background="@color/skin_item_text_bg">
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="任课教师:"
        android:layout_weight="1"
        android:gravity="right"
        skin:enable="true"
        android:textColor="@color/skin_item_text_color"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="李伟民"
        android:id="@+id/tvTeacherName"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="left"
        skin:enable="true"
        android:textColor="@color/skin_item_text_color"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        skin:enable="true"
        android:background="@color/skin_item_text_bg">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="课程学分:"
            android:layout_weight="1"
            android:gravity="right"
            skin:enable="true"
            android:textColor="@color/skin_item_text_color"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3.5学分"
            android:id="@+id/tvXuefen"
            android:layout_weight="1"
            android:gravity="left"
            skin:enable="true"
            android:textColor="@color/skin_item_text_color"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/app_interval_15"
        android:textColor="@color/skin_item_text_bg"
        android:padding="10dp"
        android:gravity="center"
        skin:enable="true"
        android:background="@drawable/button_select"
        android:text="时间、教室"/>
    <ListView
        android:layout_marginTop="5dp"
        android:id="@+id/lvList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>