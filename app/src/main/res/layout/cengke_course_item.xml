<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:skin="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/list_item_selector"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/app_interval_10"
        android:layout_marginTop="@dimen/app_interval_10"
        android:text="1"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@color/skin_item_text_bg"
        skin:enable="true"
        android:background="#f00"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/app_interval_15"
        android:layout_marginTop="@dimen/app_interval_10"
        >
        <TextView
            android:id="@+id/tvLocal"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:text="组合数学B_01(明向校区,行思楼,A215,王健* ,1-16周上)  "
            android:textColor="@color/gray_dark"
            android:gravity="center"
            android:textSize="@dimen/font_size_B"
            />

        </LinearLayout>

</LinearLayout>