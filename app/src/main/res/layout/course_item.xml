<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_selector"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/tvId"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/app_interval_10"
        android:layout_marginTop="@dimen/app_interval_10"
        android:text="1"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#fff"
        android:background="#f00"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/app_interval_15"
        android:layout_marginTop="@dimen/app_interval_10"
        >
        <TextView
            android:id="@+id/tvCourseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计算机网络(108292)"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/font_size_B"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/app_interval_5">
                    <TextView
                        android:id="@+id/tvTeacherName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任课教师: 李伟民"
                        android:textSize="@dimen/font_size_A"
                        android:textColor="@color/description_gray"
                        />
                    <TextView
                        android:id="@+id/tvXuefen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学分: 3.0"
                        android:textSize="@dimen/font_size_A"
                        android:textColor="@color/description_gray"
                        android:layout_marginLeft="@dimen/app_interval_20"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvYuanxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计算机科学与技术学院"
                    android:textColor="@color/description_gray"
                    android:textSize="@dimen/font_size_A"
                    android:layout_marginTop="@dimen/app_interval_5"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情"
                android:textSize="@dimen/font_size_B"
                android:textColor="@color/white"
                android:background="@drawable/button_select"
                android:paddingTop="@dimen/app_interval_5"
                android:paddingBottom="@dimen/app_interval_5"
                android:paddingLeft="@dimen/app_interval_10"
                android:paddingRight="@dimen/app_interval_10"
                android:layout_marginRight="@dimen/app_interval_10"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/app_line_colors"
            android:layout_marginTop="@dimen/app_interval_10"
            android:layout_marginBottom="@dimen/app_interval_5"/>

    </LinearLayout>
</LinearLayout>