<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:skin="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/list_item_selector"
    android:orientation="horizontal">
    <com.lenovohit.administrator.tyut.views.CircleImageView
        android:id="@+id/imgDoctor"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/app_interval_10"
        android:layout_marginTop="@dimen/app_interval_10"
        android:scaleType="fitCenter"
        android:src="@mipmap/head"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/app_interval_15"
        android:layout_marginTop="@dimen/app_interval_10"
        >
        <TextView
            android:id="@+id/tvDoctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陈诗意  (课程:人工智能)"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/font_size_B"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/app_interval_5">
                    <TextView
                        android:id="@+id/tvDoctorType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="博士生导师"
                        android:textSize="@dimen/font_size_A"
                        android:textColor="@color/description_gray"
                        />
                    <TextView
                        android:id="@+id/tvDoctorKeshi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/font_size_A"
                        android:textColor="@color/description_gray"
                        android:layout_marginLeft="@dimen/app_interval_5"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvHospitalName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计算机科学与技术学院"
                    android:textColor="@color/description_gray"
                    android:textSize="@dimen/font_size_A"
                    android:layout_marginTop="@dimen/app_interval_5"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即参加"
                android:textSize="@dimen/font_size_B"
                skin:enable="true"
                android:textColor="@color/skin_item_text_bg"
                android:background="@drawable/button_select"
                android:paddingTop="@dimen/app_interval_5"
                android:paddingBottom="@dimen/app_interval_5"
                android:paddingLeft="@dimen/app_interval_10"
                android:paddingRight="@dimen/app_interval_10"
                android:layout_marginRight="@dimen/app_interval_10"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/app_line_colors"
            android:layout_marginTop="@dimen/app_interval_5"
            android:layout_marginBottom="@dimen/app_interval_5"/>
        <TextView
            android:id="@+id/tvExpert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="作为人工智能领域的三位奠基人之一，陈诗意为卷积神经网络的研究和发展做出了重要贡献，尤其是在图像识别领域。"
            android:textColor="@color/description_gray"
            android:textSize="@dimen/font_size_A"
            android:paddingRight="@dimen/app_interval_10"
            android:paddingBottom="@dimen/app_interval_5"
            />
    </LinearLayout>
</LinearLayout>