<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/skin_item_text_bg"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="上海"
            android:textColor="@color/skin_item_text_color"
            android:textSize="15sp"
            skin:enable="true"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvHomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的群组"
            skin:enable="true"
            android:textColor="@color/skin_item_text_color"
            android:textSize="20sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/newgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/skin_item_text_bg"
            android:padding="10dp"
            android:textSize="15sp"
            skin:enable="true"
            android:drawableLeft="@mipmap/newgroup"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:text="新建群组"/>
        <TextView
            android:id="@+id/findfroup"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/skin_item_text_bg"
            android:padding="10dp"
            skin:enable="true"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/findgroup"
            android:textSize="15sp"
            android:text="查找群组"/>
    </LinearLayout>
    <ListView
        android:id="@+id/ivList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>